<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2>Rate the restaurant <%= @restaurant.name %></h2>

      <%= simple_form_for [@restaurant, @review] do |f| -%>
        <%= f.input :content %>
        <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
        <%= f.submit "Submit", class: "mt-3 mr-2 btn btn-primary" %>
        <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "mt-3 btn btn-primary"  %>
      <% end -%>
    </div>
  </div>
</div>
