<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1>My restaurants</h1>
      <div class="list-group mt-3">
      <% @restaurants.each do |restaurant| %>
        <a>
          <%= link_to restaurant.name, restaurant_path(restaurant), class: "list-group-item list-group-item-action"  %>
        </a>
      <% end %>
      </div>
      <%= link_to "Add a restaurant", new_restaurant_path, class: "mt-3 btn btn-primary"  %>
    </div>
  </div>
</div>
